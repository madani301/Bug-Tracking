<div class="row mt-1">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-astronaut"></i> Add User
      </h1>
      <%- include ('partials/messages.ejs') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              oninvalid="this.setCustomValidity('Enter only alphabets')" oninput="this.setCustomValidity('')"
              pattern="^[A-Za-z\s]+$" value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              oninvalid="this.setCustomValidity('Enter a valid email')" oninput="this.setCustomValidity('')"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="role">Role</label>
            <select type="role" id="role" name="role" class="custom-select">
              <option value="Tester">Tester</option>
              <option value="Developer">Developer</option>
              <option value="Client">Client</option>
              <option value="Admin">Admin</option>
            </select>
          </div>
          <div class="form-group">
            <label for="group">Group</label>
            <select type="group" id="group" name="group" class="custom-select">
              <option hidden value="">Select a Group</option>
              <option value="Front-end">Front-end</option>
              <option value="Back-end">Back-end</option>
            </select>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Add User
          </button>
        </form>
    </div>
  </div>
</div>